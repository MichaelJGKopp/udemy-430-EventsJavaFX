<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="dev.lpa.udemy430events.HelloController"
          alignment="CENTER" hgap="10" vgap="10">

    <TextField fx:id="nameField" text="Enter name" GridPane.rowIndex="0" GridPane.columnIndex="0"
               GridPane.columnSpan="2" onMouseClicked="#onEnterEmptyTextField"/>

    <Button text="Say Hello" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onHelloButtonClick"/>
</GridPane>
